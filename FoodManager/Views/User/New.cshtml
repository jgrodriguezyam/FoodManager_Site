@model FoodManager.Models.User
@using FoodManager.Infrastructure.Enums
@using FoodManager.Infrastructure.Helpers
@{
    ViewBag.Title = "Nuevo usuario";
    ViewBag.ButtonSave = Html.ButtonSave();
}

@using (Html.BeginForm(ActionType.Create.ToString(), EntityType.User.ToString(), FormMethod.Post, new {id = "Form"}))
{
    <div class="panel panel-default">
        <div class="panel-heading"> Información general</div>
        <div class="panel-body">
            <div id="UserContent">
                @Html.Partial("_Form", Model)
                @Html.Partial("_Password", Model)
            </div>
        </div>
    </div>
    @Html.ButtonsForm()
}
