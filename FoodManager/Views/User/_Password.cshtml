@using FoodManager.Infrastructure.Enums
@model FoodManager.Models.User

<div class="form-group">
    @Html.LabelFor(m => m.UserName, "Alias", new { @class = "col-lg-2 control-label" })
    <div class="col-md-3 input-group required-field-block">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        @Html.TextBoxFor(m => m.UserName, new
        {
            @class = "form-control",
            data_role = "none",
            placeholder = "Alias",
            id = "UserName",
            maxlength = "15",
            Autocomplete = "off",
            data_entity = EntityType.User,
            data_first = Model.UserName
        })
        <div class="required-icon iconPointer">
            <div class="text">*</div>
        </div>
    </div>
    <span class="col-lg-2 control-label clearSpan"></span>
    <span class="col-lg-6 validateCustom" id="UserNameMessage"></span>
</div>

<div class="form-group">
    <label class="col-lg-2 control-label">
        Contraseña  &nbsp;
        <span class="iconPointer pull-right margin-right-10 previewPassword" data-toggle="tooltip" data-placement="top" title="Mostrar contraseña"> <i class="fa fa-eye"></i></span>
    </label>
    <div class="col-md-3 input-group required-field-block">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        @Html.PasswordFor(m => m.NewPassword, new
        {
            @class = "form-control",
            data_role = "none",
            placeholder = "**********",
            id = "NewPassword",
            maxlength = "15",
            Autocomplete = "off"
        })
        <div class="required-icon iconPointer">
            <div class="text">*</div>
        </div>
    </div>
    <span class="col-lg-2 control-label clearSpan"></span>
    <span class="col-lg-6 validateCustom" id="NewPasswordMessage"></span>
</div>

<div class="form-group">
    <label class="col-lg-2 control-label">
        Contraseña  &nbsp;
        <span class="iconPointer pull-right margin-right-10 previewPassword" data-toggle="tooltip" data-placement="top" title="Mostrar contraseña"> <i class="fa fa-eye"></i></span>
    </label>
    <div class="col-md-3 input-group required-field-block">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        @Html.PasswordFor(m => m.ConfirmPassword, new
        {
            @class = "form-control",
            data_role = "none",
            placeholder = "**********",
            id = "ConfirmPassword",
            maxlength = "15",
            Autocomplete = "off"
        })
        <div class="required-icon iconPointer">
            <div class="text">*</div>
        </div>
    </div>
    <span class="col-lg-2 control-label clearSpan"></span>
    <span class="col-lg-6 validateCustom" id="ConfirmPasswordMessage"></span>
</div>

<input type="hidden" id="Password" name="Password" />