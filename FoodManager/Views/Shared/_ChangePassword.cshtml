@using FoodManager.Infrastructure.Resolvers

<div id="ChangePasswordForm" data-root="@RootResolver.Resolver">
    <div class="form-group">
        <label class="col-lg-2 control-label">
            Contraseña actual &nbsp;
            <span class="iconPointer pull-right margin-right-10 previewPassword" data-toggle="tooltip" data-placement="top" title="Mostrar contraseña"><i class="fa fa-eye"></i></span>
        </label>
        <div class="col-md-4 input-group required-field-block">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <input type="password" id="OldPassword" name="OldPassword" class="form-control" data-role="none" placeholder="**********" maxlength="15" autocomplete="off" />
            <div class="required-icon iconPointer">
                <div class="text">*</div>
            </div>
        </div>
        <span class="col-lg-2 control-label clearSpan"></span>
        <span class="col-lg-8 validateCustom" id="OldPasswordMessage"></span>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label">
            Nueva contraseña  &nbsp;
            <span class="iconPointer pull-right margin-right-10 previewPassword" data-toggle="tooltip" data-placement="top" title="Mostrar contraseña"><i class="fa fa-eye"></i></span>
        </label>
        <div class="col-md-4 input-group required-field-block">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <input type="password" id="NewPassword" name="NewPassword" class="form-control" data-role="none" placeholder="**********" maxlength="15" autocomplete="off" />
            <div class="required-icon iconPointer">
                <div class="text">*</div>
            </div>
        </div>
        <span class="col-lg-2 control-label clearSpan"></span>
        <span class="col-lg-8 validateCustom" id="NewPasswordMessage"></span>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">
            Confirmar  &nbsp;
            <span class="iconPointer pull-right margin-right-10 previewPassword" data-toggle="tooltip" data-placement="top" title="Mostrar contraseña"><i class="fa fa-eye"></i></span>
        </label>
        <div class="col-md-4 input-group required-field-block">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" data-role="none" placeholder="**********" maxlength="15" autocomplete="off" />
            <div class="required-icon iconPointer">
                <div class="text">*</div>
            </div>
        </div>
        <span class="col-lg-2 control-label clearSpan"></span>
        <span class="col-lg-8 validateCustom" id="ConfirmPasswordMessage"></span>
    </div>
</div>
